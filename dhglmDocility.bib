@article{martin_environmental_2014,
  title = {Environmental, social, morphological, and behavioral constraints on opportunistic multiple paternity},
  volume = {68},
  issn = {0340-5443, 1432-0762},
  url = {http://link.springer.com/article/10.1007/s00265-014-1762-3},
  doi = {10.1007/s00265-014-1762-3},
  abstract = {Multiple mating and multiple paternity in polytocous species have been mostly studied from an adaptive (i.e., cost{\textendash}benefit) perspective. Disease, time, energy, and the risk of injuries are well-known costs of multiple mating, yet from both male and female perspectives, a number of genetic and non-genetic benefits have also been identified. The effects of environmental conditions and individual-specific behavior, however, are much less well understood. Using a long-term study on yellow-bellied marmots (Marmota flaviventris), we evaluated the impacts of environmental variation, social structure, female body mass, and female docility (a personality trait) on the occurrence of multiple paternity. Multiple paternity was influenced by environmental constraints, social constraints, a female's personality, and her body mass at emergence from hibernation. Personality and mass effects were detected only when environmental or social conditions were favorable. Our results suggest that multiple paternity is mainly limited by the opportunity to have access to multiple mates and is influenced by costs or mate choice because heavier females were more likely to have litters with multiple sires than smaller ones. Future studies in other species might benefit from considering environmental constraints when studying multiple paternity.},
  language = {en},
  timestamp = {2015-11-25T10:07:43Z},
  number = {9},
  urldate = {2014-09-11},
  journal = {Behavioral {Ecology} and {Sociobiology}},
  author = {{Martin}, Julien G. A. and {Petelle}, Matthew B. and {Blumstein}, Daniel T.},
