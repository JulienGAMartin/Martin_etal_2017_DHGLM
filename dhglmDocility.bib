  keywords = {Animal Ecology,Behavioral Sciences,boldness,effect size,Flight initiation distance,personality,Phenotypic correlation,temperament,Zoology},
  pages = {2005--2017},
  file = {Garamszegi_et_al_2015_Behavioral_Ecology_and_Sociobiology.pdf:/home/julien/Documents/PDF/Garamszegi_et_al_2015_Behavioral_Ecology_and_Sociobiology.pdf:application/pdf}
